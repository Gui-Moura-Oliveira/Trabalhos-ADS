#include <stdio.h>

int main() {


    int linhas, cont = 1;

    printf("Digite a quantidade de linhas: ");
    scanf("%d", &linhas);

    for (int i = 1; i <= linhas; i++)
    {
        
        printf("*");
        if(i == cont){
            
            printf("\n");
            cont++;
            i = 0;
        }

    if(cont - 1 == linhas){

        i = linhas;
    }
        
    }

  return 0;
  
}
